// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChildData {
  id              String   @id @default(cuid())  // Unique ID untuk setiap pemeriksaan
  nik             String?  // NIK anak (optional, bisa duplicate - satu anak bisa punya banyak pemeriksaan)
  gender          String   // "male" | "female"
  age             Int      // in months
  birthWeight     Float    @map("birth_weight")
  birthLength     Float    @map("birth_length")
  bodyWeight      Float    @map("body_weight")
  bodyLength      Float    @map("body_length")
  breastFeeding   Boolean  @map("breast_feeding")
  stunting        Boolean
  imageIsStunting Boolean  @map("image_is_stunting")
  latitude        Float?
  longitude       Float?
  createdAt       DateTime @default(now()) @map("created_at")
  alamatId        String?  @map("alamat_id")
  
  alamat          Alamat?  @relation(fields: [alamatId], references: [id])

  @@map("children_data")
  @@index([nik])  // Index untuk pencarian berdasarkan NIK
}

model Alamat {
  id           String   @id @default(cuid())
  latitude     Float
  longitude    Float
  state        String
  city         String
  cityDistrict String   @map("city_district")
  village      String
  createdAt    DateTime @default(now()) @map("created_at")
  
  children     ChildData[]

  @@map("alamat")
}